    </xs:complexType>
    
    <xs:simpleType name="Trouve">
        <xs:restriction base="xs:string">
            <xs:pattern value="(100%)|([0-9][0-9]?%)"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
